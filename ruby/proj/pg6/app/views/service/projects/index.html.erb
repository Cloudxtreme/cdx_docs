<h1><%= Service::Project.base_class %></h1>

<script type="text/javascript">
  $(document).ready( function () {
    $('#example').dataTable();
  } );
</script>

<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
  <thead>
    <tr>
      <% Service::Project.display_columns.each do |column_name| %>
        <th width="20%"><%= column_name.titleize%></th>
      <% end %>
			<th>Action</th>
			</tr>
  </thead>
  <tbody>
    <% @objects.each do |object| %>
      <tr>
        <% Service::Project.display_columns.each do |column_name| %>
          <td>
            <% if Service::Project.is_foreign_key?(column_name) %>
              <a href='<%= Service::Project.find_associate_obj(column_name).object_path(object[column_name]) %>'><%= Service::Project.get_final_value(column_name, object[column_name])%></a>
            <% else %>
              <%= Service::Project.get_final_value(column_name, object[column_name])%>
            <% end %>
          </td>
        <% end %>
        <td>
          <%= link_to 'Show', object %>/<%= link_to 'Edit', edit_service_project_path(object)%>/<%= link_to 'Destroy', object, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table><br>
<br>

<%= link_to 'New Project', new_service_project_path %>


